@import "variables"

//建立 BFC 清除元素内部的浮动，使元素获得应有的高度。
$clearfix()
  &:before,
  &:after
    display: table
    content: ""
  &:after
    clear: both
    if $support-old-ie
      \*zoom: 1
// 设定元素的尺寸，一个参数为正方形，两个参数分别为宽高
$size(size, height = size) {
  width size
  height height
}
//rem换算
$margin-rem(arr){
  margin (arr)rem
}
  body{
    $margin-rem(10px 10px)
  }
